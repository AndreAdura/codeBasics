this code will add numbers between each other with for and while loop

//for loop

var number= 1, sum=0


for(number = 1; number < 101; number+=1) {
    sum = sum + number;
} alert("adding numbers from 1 to 100 is " + sum)


// while loop 

var number = 1, sum = 0;

while(number < 101){ sum = sum + number;
 number += 1;}
alert(" adding number from 1 to 100 is " + sum)

// Gauss Formula

var n = 100, sum;
undefined
if(n>0) {sum = n*(n+1)/2; alert(sum)}
