this code will add numbers from 1 to 100 using C++

// for loop

#include <stdio.h>
int main() {

	int number;
	int sum; 

	

	sum = 0;
	number = 1;

	for (number = 1; number < 101; number += 1) {
		sum = sum + number;
	
	}
	printf("%d", sum); 
	scanf("%d");
	return 1;
} 


// while loop

#include <stdio.h>
int main() {

	int number;
	int sum; 

	

	sum = 0;
	number = 1;

	while (number < 101) {
		sum = sum + number;
		number += 1;
}



	printf("%d", sum); 
	scanf("%d");
	return 1;
} 


// Gauss Formula

#include <stdio.h>
int main() {

	int number;
	int sum; 

	

	sum = 0;
	number = 100;

	if (number > 0) {
		sum = number * (number + 1) / 2;
	}


	printf("%d", sum); 
	scanf("%d");
	return 1;
} 
